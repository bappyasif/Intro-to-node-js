<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/nav.ejs") %>
            </div>
            <div class="col">
                <h1><%= title %> </h1>
                <form action="" method="post">
                    <div class="form-group">
                        <label for="first_name">First Name</label>
                        <input type="text" id="first_name" class="form-control" placeholder="First name (hoxie)" 
                        name="first_name" required="true" value=<%= author === undefined ? "" : author.first_name %>>

                        <label for="family_name">Family Name</label>
                        <input type="text" id="familiy_name" class="form-control" placeholder="Family name (loxie)" 
                        name="family_name" required="true" value=<%= author === undefined ? "" : author.family_name %>>
                    </div>

                    <div class="form-group">
                        <label for="date_of_birth">Date of birth: </label>
                        <!-- <input type="date" name="date_of_birth" id="date_of_birth" value=<\%= author === undefined ? "" : author.date_of_birth %>> -->
                        <!-- <input type="date" name="date_of_birth" id="date_of_birth" value=<\%= author === undefined ? "" : author.dob_iso_form %>> -->
                        <input type="date" name="date_of_birth" id="date_of_birth" value=<%= author?.dob_iso_form %>>

                        <label for="date_of_death">Date of death: </label>
                        <!-- <input type="date" name="date_of_death" id="date_of_death" value=<\%= author === undefined ? "" : author.date_of_death %>> -->
                        <!-- <input type="date" name="date_of_death" id="date_of_death" value=<\%= author === undefined ? "" : author.dod_iso_form %>> -->
                        <input type="date" name="date_of_death" id="date_of_death" value=<%= author?.dod_iso_form %>>
                    </div>

                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>

                <!-- listing errors, if or when any -->
                <% if(errors) { %>
                    <ul>
                        <% errors.forEach(err => { %>
                            <li><%= err.msg %></li>
                        <% }) %> 
                    </ul>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>