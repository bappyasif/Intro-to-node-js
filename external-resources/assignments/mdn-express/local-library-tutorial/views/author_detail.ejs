<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/nav.ejs") %>
            </div>
            <div class="col">
                <h1>Author: <%= author.name %> </h1>
                <!-- <p><\%= author.lifespan %></p> -->
                <p><%= author.date_of_birth_yyyy_mm_dd %> - <%= author.date_of_birth_yyyy_mm_dd %></p>

                <div style="margin-left: 20px; margin-top: 20px;">
                    <h4>Books</h4>
                    <% if(authors_books.length) { %>
                        <dl>
                            <% authors_books.forEach(book => { %>
                                <dt><a href=<%= book.url %>><%= book.title %></a></dt>
                                <dd><%= book.summary %></dd>
                            <% }) %>
                        </dl>
                    <% } else { %>
                        <p>This author has no books yet</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>