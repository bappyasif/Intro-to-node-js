<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/nav.ejs") %>
            </div>
            <div class="col">
                <h1>Genre: <%= genre.name %></h1>
                <div style="margin-left:20px;margin-top:20px;">
                    <h4>Books</h4>
                    <% if(genre_books.length) { %>
                        <dl>
                            <% genre_books.forEach(book => { %>
                                <dt><a href=<%= book.url %>><%= book.title %></a></dt>
                                <dl><%= book.summary %> </dl>
                            <% }) %> 
                        </dl>
                    <% } else { %>
                        <p>This genre has no books yet</p>
                    <% } %>
                </div>
                <hr>
                <hr>
                    <span><a class="btn btn-warning" href=<%= genre._id+"/update" %>>Update</a></span>
                    <span><a class="btn btn-danger" href=<%= genre._id+"/delete" %>>Delete</a></span>
                <hr>
                <hr>
            </div>
        </div>
    </div>
</body>
</html>