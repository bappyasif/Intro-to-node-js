<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/nav.ejs") %>
            </div>
            <div class="col-md-6">
                <h1 class="rounded bg-secondary text-white border border-primary mt-2 pt-2 pb-2 text-center"><%= title %></h1>
                <table class="table table-borderd text-center table-hover table-dark">
                    <caption>List of all tracks</caption>
                    <thead>
                        <tr>
                            <th class="bg-info text-white" scope="col">Track Name</th>
                            <th class="bg-info text-white" scope="col">Album Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tracks?.forEach(track => { %>
                            <tr>
                                <td ><a class="text-white btn btn-sm" href=<%= track.url %>><%= track.name %></a></td>
                                <td class="bg-secondary"><a class="text-white" href=<%= track.album_url %>><%= track.album_name %></a></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <hr>
                <hr>
                <nav class="nav nav-pills row nav-fills">
                    <a class="col nav-item btn btn-lg btn-info" href=<%= "/catalog/track/create" %>>Create Create</a>
                </nav>
            </div>
        </div>
    </div>
</body>
</html>