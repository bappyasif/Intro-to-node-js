<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/nav.ejs") %>
            </div>
            <div class="col-sm-4">
                <h1><%= title %></h1>
                <% if(albums.length) { %>
                    <h2>Delete these albums first</h2>
                    <ul>
                        <% albums.forEach(album => { %>
                            <li><a href=<%= "/catalog/album/"+album._id %>><%= album.name %></a></li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <h3>Are you sure you want to delete this artist?</h3>
                    <form action="" method="post">
                        <input type="hidden" name="artistid" id="artistid" required="true" value=<%= artist._id %>>
                        <button type="submit">Delete</button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>