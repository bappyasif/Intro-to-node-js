<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/nav.ejs") %>
            </div>
            <div class="col-sm-4">
                <table class="table table-dark table-hover">
                    <thead>
                        <h1 class="rounded bg-success text-white border border-primary mt-2 pt-2 pb-2 text-center"><%= title %> Of <%= album.name %></h1>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Album Name</th>
                            <td class="bg-info"><%= album.name %></td>
                        </tr>
                        <tr>
                            <th scope="row">Artist Name</th>
                            <td class="bg-info"><%= album.artistName %></td>
                        </tr>
                        <tr>
                            <th scope="row">Genre Name</th>
                            <td class="bg-info"><%= album.album_genre %></td>
                        </tr>
                        <tr>
                            <th scope="row">Released Date</th>
                            <td class="bg-info"><%= album.released_date_format %></td>
                        </tr>
                        <tr>
                            <th scope="row">Album Description</th>
                            <td class="bg-info"><%= album.description %></td>
                        </tr>
                        <tr>
                            <th scope="row">Retail Price</th>
                            <td class="bg-info"><%= album.price %></td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <hr>
                
            </div>
        </div>
    </div>
</body>
</html>